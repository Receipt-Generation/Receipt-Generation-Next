generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organisation {
  oid      String   @id @default(cuid())
  orgName  String
  orgType  String
  orgEmail String
  orgPhone String
  orgLogo  String
  orgDesc  String?
  orgUrl   String
  orgAddr  String
  ownerName String
  Transactions Transactions[]
}

model Transactions {
  tid         String   @id @default(cuid())
  oid         String
  receiptNo   Int       @unique @default(autoincrement())
  name        String
  amount      Float
  currency    String
  status      String
  email       String
  date        DateTime
  mailStatus  Boolean @default(false)
  Organisation Organisation @relation(fields: [oid], references: [oid])
}